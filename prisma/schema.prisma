generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model task{
  id Int @default(autoincrement()) @id 
  taskName String
  taskCreatedAt DateTime @default(now())
  author String?
  doDateTask DateTime?
  updateTaskTime DateTime?
  deleteTaskTime DateTime?
}